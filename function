#include <iostream>
using namespace std;

int main()
int i,j,n,fact,sign=-1;
float x,p,sum=0;
cout<<"Enter the value of x : ";
cin>>x;
x=x*3.14/180;
cout<<"Enter the value of x\n : ";
cin>>n;
for(i=1;i<=n;i+=2)
{
    i=1;
fact=1;

for(j=0;j<=i;j++)
{
    p=p*x;
    fact=fact*j;
}
sum+=sign*p/fact;
sign=-1*sign;
}
cout<<1+sum;
return 0;
}
